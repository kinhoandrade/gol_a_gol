<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >
	    
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <RelativeLayout 
	        android:id="@+id/llHeader"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/white">
			<ImageView
			    android:id="@+id/ivBanner"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:contentDescription="@string/banner"
			    android:layout_centerHorizontal="true"
			    android:layout_marginTop="10dp"
			    android:src="@drawable/scoreboard" />
			<ImageView 
			    android:id="@+id/ivConfig"
		        style="@style/settingIcon"
			    android:contentDescription="@string/banner"
			    android:layout_marginTop="10dp"
			    android:layout_marginRight="10dp"
			    android:layout_alignParentRight="true"
			    android:onClick="openConfig"
			    android:src="@drawable/setting_icon" />
		</RelativeLayout>
		
	    <RelativeLayout
	        android:id="@+id/rlBody"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="0dp"
	        android:layout_below="@id/llHeader"
	        android:background="@color/green">
			
		    <ImageView
			    android:id="@+id/ivFacebookLogoFb"
			    android:layout_width="153dp"
			    android:layout_height="46dp"
			    android:contentDescription="@string/banner"
			    android:layout_marginTop="10dp"
			    android:layout_centerHorizontal="true"
			    android:src="@drawable/facebook" />
	        
	       <Button
		        android:id="@+id/btLogToFb"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/ivFacebookLogoFb"
		        android:layout_marginTop="20dp"
		        android:layout_centerVertical="true"
			    android:onClick="onClick"
		        android:text="@string/log_to_fb" />
	       
          <Button
		        android:id="@+id/btPostOnFb"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/btLogToFb"
		        android:layout_centerVertical="true"
			    android:onClick="post"
		        android:visibility="invisible"
		        android:text="@string/post_on_fb" />
          
          <Button
		       android:id="@+id/btCancelFb"
		        android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:layout_below="@id/btPostOnFb"
		       android:layout_centerVertical="true"
		       android:text="@string/close" />
          
	        		        
	    </RelativeLayout>
	    
	    <LinearLayout 
	        android:id="@+id/llFooter"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:layout_below="@id/rlBody"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:background="@color/green">
		</LinearLayout>		
	        
	</RelativeLayout>
</ScrollView>