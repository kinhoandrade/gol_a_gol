<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@layout/repeat">
	    
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
		
	    <RelativeLayout
	        android:id="@+id/rlBody"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="0dp"
	        android:background="@color/gray">
	        
			<ImageView 
			    android:id="@+id/ivMenu"
		        style="@style/settingIcon"
			    android:contentDescription="@string/banner"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="5dp"
			    android:layout_marginTop="5dp"
			    android:onClick="openMenu"
			    android:src="@drawable/report" />
			<ImageView 
			    android:id="@+id/ivConfig"
		        style="@style/settingIcon"
			    android:contentDescription="@string/banner"
			    android:layout_alignTop="@id/ivMenu"
			    android:layout_alignParentRight="true"
			    android:layout_toLeftOf="@id/ivMenu"
			    android:layout_marginRight="50dp"
			    android:layout_marginTop="5dp"
			    android:onClick="openConfig"
			    android:src="@drawable/setting_icon" />
	        
		    <TextView
		        android:id="@+id/tvArena"
		        style="@style/defaultFontSmall"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="5dp"
		        android:text="@string/arena" />

   		    <TextView
		        android:id="@+id/tvArenaConfirm"
		        style="@style/defaultFontSmall"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="5dp"
		        android:textColor="@color/grey"
		        android:layout_below="@id/tvArena"
		        android:text="@string/arena" />
		    		
	   	    <TextView
		        android:id="@+id/tvQuantity"
		        style="@style/defaultFontSmall"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/tvArenaConfirm"
		        android:layout_alignLeft="@+id/tvArena"
		        android:layout_marginTop="5dp"
		        android:text="@string/quantity" />

     		<TextView
		        android:id="@+id/tvQuantityConfirm"
		        style="@style/defaultFontSmall"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="5dp"
		        android:textColor="@color/grey"
		        android:layout_below="@id/tvQuantity"
		        android:text="@string/quantity" />
	   	    	
	   	    <TextView
		        android:id="@+id/tvDate"
		        style="@style/defaultFontSmall"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/tvQuantityConfirm"
		        android:layout_alignLeft="@+id/tvQuantity"
		        android:layout_marginTop="5dp"
		        android:text="@string/date" />

	         <TextView
		        android:id="@+id/tvDateConfirm"
		        style="@style/defaultFontSmall"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="5dp"
		        android:textColor="@color/grey"
		        android:layout_below="@id/tvDate"
		        android:text="@string/date" />
	         
   	         <TextView
		        android:id="@+id/tvPostFb"
		        style="@style/defaultFont"
		        android:textSize="14dp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="5dp"
		        android:layout_below="@id/tvDateConfirm"
		        android:text="@string/post_on_fb" />
	         
	         	         
		    <ToggleButton
		        android:id="@+id/tbPostFb"
		        android:layout_width="50dp"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="5dp"
		        android:layout_below="@id/tvPostFb"
		        android:text="@string/post_on_fb" />
	         
	         <Button
	            android:id="@+id/btOk"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/tbPostFb"
		        android:layout_marginTop="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginLeft="10dp"
		        android:text="@string/ok" />
	         
	         <Button
	            android:id="@+id/btCancel"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/btOk"
		        android:layout_marginTop="5dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginLeft="10dp"
		        android:text="@string/cancel" />
		        
	    </RelativeLayout>
	    
	    <LinearLayout 
	        android:id="@+id/llFooter"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:layout_below="@id/rlBody"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:background="@color/gray">			
		</LinearLayout>		    
	        
			<ImageView 
			    android:id="@+id/ivBall"
			    android:layout_width="80dp"
			    android:layout_height="80dp"
			    android:contentDescription="@string/banner"
			    android:layout_below="@id/llFooter"
			    android:layout_marginLeft="10dp"
			    android:layout_marginTop="-55dp"
			    android:src="@drawable/ball" />		
	        
	</RelativeLayout>
</ScrollView>